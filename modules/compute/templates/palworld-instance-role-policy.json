{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "InteractWithS3",
            "Effect": "Allow",
            "Action": [
                "s3:PutObject",
                "s3:ListBucket",
                "s3:GetObject",
                "s3:DeleteObject",
                "s3:GetBucketLocation"
            ],
            "Resource": [
                %{ if custom_palworldsettings_s3 == true }"${palworldsettings_s3_bucket_arn}",%{ endif }
                %{ if custom_palworldsettings_s3 == true }"${palworldsettings_s3_bucket_arn}/*",%{ endif }
                %{ if enable_s3_backups == true }"${backup_s3_bucket_arn}",%{ endif }
                %{ if enable_s3_backups == true }"${backup_s3_bucket_arn}/*",%{ endif }
                ${if start_from_backup == true && var.backup_files_storage_type == local }"${aws_s3_bucket.palworld_bootstrap[0].arn}",%{ endif }
                ${if start_from_backup == true && var.backup_files_storage_type == local }"${aws_s3_bucket.palworld_bootstrap[0].arn}/*",%{ endif }
                ${if start_from_backup == true && var.backup_files_storage_type == s3 }"${existing_backup_files_bootstrap_bucket_arn}",%{ endif }
                ${if start_from_backup == true && var.backup_files_storage_type == s3 }"${existing_backup_files_bootstrap_bucket_arn}/*",%{ endif }              
            ]
        }
    ]
}
